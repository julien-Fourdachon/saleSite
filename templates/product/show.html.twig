{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            {% if is_granted('ROLE_USER') %}
            <a class="col-sm" href={{ path('logout') }}>Se déconecter</a>
            {% endif %}
            <a class="col-sm" href="{{ url("product.all") }}">Retour</a>
        </div>
        <table class="table">
            <tr>
                <th>Nom</th>
                <th>Sortie le</th>
                <th>Description</th>
            </tr>
            <tr>
                <td class="title">{{ product.title }}</td>
                <td>{{ product.releaseOn|date }}</td>
                <td>Description: {{ product.details }}</td>
            </tr>

        </table>
        <div class="row">
            <div><img width="600" src="\uploads\brochures\{{ product.pics }}"/></div>
        </div>
        {% if is_granted('ROLE_USER') %}
                <div class="row">
                    <p class="col-sm">Auteur de l'annonce: {{ product.user.firstname }} {{ product.user.lastname  }}</p>

                    <p class="col-sm">Coordonnées:  {{ product.user.mail }}</p>
                </div>
        {% else %}
            <div>Pour voir les coordonnées de l'annonceur, veuilllez vous connecter ou créer un compte!</div>
        {% endif %}

    </div>
{% endblock %}
